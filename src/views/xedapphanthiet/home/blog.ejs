<section id="news" class="news pd-section pd-lg-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title text-left mb-5">
                    <h2 class="news__tt text-sm text-main ut_bold"> KIẾN THỨC - KINH NGHIỆM</h2>
                </div>
            </div>
            <div class="col-sm-12 col-md-3">
            </div>
            <div class="col-sm-12 col-md-9">
                <div class="news__owl owl-carousel owl-theme">
                    <% blogs.forEach(function(blog){ %>
                        <div class="news_item">
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <h3 class="ut_bold"> <%= blog.title %> </h3>
                                    <p class="news__typho"> <%= blog.short_description %> </p>
                                    <a type="button" class="btn btn-primary Utbtn_main bg-main" href="news-detail.html"> Chi
                                        tiết <i class="icofont-long-arrow-right"></i></a>
                                </div>
                                <div class="col-sm-12 col-md-7">
                                    <div class="news__img">
                                        <img src="/public/uploads/blogs/<%= blog.image %>" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</section>