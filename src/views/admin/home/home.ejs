<% extend("../../admin") %>
<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-header card">
                    <div class="row align-items-end">
                        <div class="col-lg-8">
                            <div class="page-header-title">
                                <i class="icofont icofont-file-code bg-c-blue"></i>
                                <div class="d-inline">
                                    <h4>XE ĐẠP PHƯƠNG ĐÔNG</h4>
                                    <span> Tên của user <%= user.user_name %></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="page-header-breadcrumb">
                                <ul class="breadcrumb-title">
                                    <li class="breadcrumb-item">
                                        <a href="index.html">
                                            <i class="icofont icofont-home"></i>
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item"><a href="/admin">Trang chủ</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12 col-xl-12">
                        </div>
                    </div>
                    <div class="row">
                        <!-- card1 start -->
                        <div class="col-md-6 col-xl-3">
                            <div class="card widget-card-1">
                                <a class="card-block-small" href="/admin/slides">
                                    <i class="icofont icofont-pie-chart bg-c-blue card1-icon"></i>
                                    <span class="text-c-blue f-w-600">5 slides</span>
                                    <h4> Danh sách Slides </h4>
                                    <div>
                                        <span class="f-left m-t-10 text-muted">
                                            <i class="text-c-blue f-16 icofont icofont-warning m-r-10"></i>5
                                        </span>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <!-- card1 end -->
                        <!-- card1 start -->
                        <div class="col-md-6 col-xl-3">
                            <div class="card widget-card-1">
                                <a class="card-block-small" href="/admin/blog">
                                    <i class="icofont icofont-newspaper bg-c-pink card1-icon"></i>
                                    <span class="text-c-pink f-w-600"><%= blogCount %> Tin</span>
                                    <h4>Tin tức</h4>
                                    <div>
                                        <span class="f-left m-t-10 text-muted">
                                            <i class="text-c-pink f-16 icofont icofont-calendar m-r-10"></i>Last 24
                                            hours
                                        </span>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <!-- card1 end -->
                        <!-- card1 start -->
                        <div class="col-md-6 col-xl-3">
                            <div class="card widget-card-1">
                                <a class="card-block-small" href="/admin/products">
                                    <i class="icofont icofont-list bg-c-green card1-icon"></i>
                                    <span class="text-c-green f-w-600"><%= productCount %> sản phẩm</span>
                                    <h4>Sản phẩm</h4>
                                    <div>
                                        <span class="f-left m-t-10 text-muted">
                                            <i class="text-c-green f-16 icofont icofont-tag m-r-10"></i>Tracked via
                                            microsoft
                                        </span>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <!-- card1 end -->
                        <!-- card1 start -->
                        <div class="col-md-6 col-xl-3">
                            <div class="card widget-card-1">
                                <a href="/admin/user/<%= user.user_id %>" class="card-block-small">
                                    <i class="icofont icofont-info bg-c-yellow card1-icon"></i>
                                    <span class="text-c-yellow f-w-600">Thông tin</span>
                                    <h4>Phương Đông</h4>
                                    <div>
                                        <span class="f-left m-t-10 text-muted">
                                            <i class="text-c-yellow f-16 icofont icofont-refresh m-r-10"></i>Just update
                                        </span>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <!-- card1 end -->
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-xl-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-3"> <strong> Sản phẩm mới gần đây </strong></h5>
                                    <div class="table-responsive new-product">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th> STT </th>
                                                    <th> Ảnh Sản Phẩm </th>
                                                    <th> Tên Sản Phẩm </th>
                                                    <th> Giá(VNĐ) </th>
                                                    <th> hành động </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% products.forEach(function(product, index){ %>
                                                <tr>
                                                    <td scope="row"><%= index %></th>
                                                        <% if(product.image.length > 0){ %>
                                                    <th class="product-image">
                                                        <img class="sp_img-<%= product.id%>"
                                                            src="/public/uploads/products/<%=JSON.parse(product.image)[0] %>"
                                                            alt="">
                                                        <p class="mt-2"> <span
                                                                class="label label-primary">Sku:&nbsp;<%= product.sku %></span>
                                                        </p>
                                                        </td>
                                                        <% } else{ %>
                                                    <td class="product-image">
                                                        <img class="sp_img-<%= product.id%>"
                                                            src="/public/admin/images/example.png" alt="">
                                                        <p class="mt-2"><span
                                                                class="label label-primary">Sku:&nbsp;<%= product.sku %></span>
                                                        </p>
                                                    </td>
                                                    <% } %>
                                                    <td class="font-weight-bold">
                                                        <p class="text-break"> <%= product.name %> </p>
                                                    </td>
                                                    <td class="price-show"> <span class="product-price">
                                                            <%= product.price %>
                                                        </span> <sup> VNĐ </sup>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Basic example">
                                                            <a href="/admin/product/edit-product/<%= product.id %>"
                                                                type="button" class="btn hor-grd btn-grd-warning "
                                                                title="Sửa sản phẩm">
                                                                <i class="icofont icofont-edit"></i> </a>
                                                            <a href="/admin/product/delete-product/<%= product.id %>"
                                                                type="button" class="btn hor-grd btn-grd-danger "> <i
                                                                    class="icofont icofont-ui-delete"
                                                                    title="Xóa sản phẩm"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-12 col-xl-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5> <strong> Tin tức mới nhất </strong></h5>
                                    <div class="card-header-right">
                                        <ul class="list-unstyled card-option">
                                            <li><i class="icofont icofont-simple-left "></i></li>
                                            <li><i class="icofont icofont-maximize full-card"></i></li>
                                            <li><i class="icofont icofont-minus minimize-card"></i></li>
                                            <li><i class="icofont icofont-refresh reload-card"></i></li>
                                            <li><i class="icofont icofont-error close-card"></i></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-block table-border-style mt-2">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th> STT </th>
                                                    <th> Hình ảnh </th>
                                                    <th> Tên bài viết </th>
                                                    <th> Mô tả ngắn </th>
                                                    <th> hành động </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% blogs.forEach(function(blog, index){ %>
                                                <tr>
                                                    <th scope="row"><%= index %></th>
                                                    <% if(blog.image != '' && blog.image != null){ %>
                                                    <td class="product-image">
                                                        <img class="sp_img-<%= blog.id%>"
                                                            src="/public/uploads/blogs/<%= blog.image %>"
                                                            alt="<%= blog.title %>">
                                                    </td>
                                                    <% } else{ %>
                                                    <td class="product-image">
                                                        <img class="sp_img-<%= blog.id%>"
                                                            src="/admin/public/images/example.png"
                                                            alt="<%= blog.title %>">
                                                    </td>
                                                    <% } %>
                                                    <td class="font-weight-bold">
                                                        <p> <%= blog.title %> </p>
                                                    </td>
                                                    <td class="font-weight-bold">
                                                        <p> <%= blog.short_description %> </p>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Basic example">
                                                            <a href="/admin/blog/edit-blog/<%= blog.id %>"
                                                                class="btn hor-grd btn-grd-warning" title="Sửa blog">
                                                                <i class="icofont icofont-edit"></i>
                                                            </a>
                                                            <a href="/admin/slide/delete-blog/<%= blog.id %>"
                                                                class="delete-blog-confirm btn hor-grd btn-grd-danger"
                                                                data-url="/admin/blog/delete-blog/<%= blog.id %>"
                                                                title="Xóa blog" data-target="#blog-delete-modal"
                                                                data-toggle="modal">
                                                                <i class="icofont icofont-ui-delete"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="styleSelector">
            </div>
        </div>
    </div>
</div>