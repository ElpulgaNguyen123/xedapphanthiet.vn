<% extend('./master') %>
<section class="login p-fixed d-flex text-center bg-primary common-img-bg">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->
                <div class="signup-card card-block auth-body mr-auto ml-auto">
                    <form action="/admin/change-password/<%= token %>" method="POST" md-float-material">
                        <div class="text-center">
                            <img src="/admin/images/auth/logo-elpulga.png" alt="logo.png">
                        </div>
                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center txt-primary"> Nhập mật khẩu mới </h3>
                                </div>
                            </div>
                            <% if(errors != ""){%>
                            <% errors.forEach((item) => {%>
                            <div class="alert alert-danger" role="alert">
                                <strong class="alert-link"><%- item %></strong>.
                            </div>
                            <%})%>
                            <%}%>
                            <% if(success != ""){%>
                            <% success.forEach((item) => {%>
                            <div class="alert alert-success" role="alert">
                                <strong class="alert-link"><%- item %></strong>.
                            </div>
                            <%})%>
                            <%}%>
                                <hr />
                                <div class="input-group">
                                    <input type="password" class="form-control" name="password"
                                        placeholder="Nhập mật khẩu mới" required>
                                    <span class="md-line"></span>
                                </div>
                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button type="submit"
                                            class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Xác nhận</button>
                                    </div>
                                </div>
                                <div class="row link-back text-left m-t-30">
                                    <div class="col-md-12">
                                        <a href="/admin/login"
                                            class=""><i class="ti-arrow-left"></i> Quay lại đăng nhập</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- end of form -->
                    </div>
                    <!-- Authentication card end -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row -->
        </div>
        <!-- end of container-fluid -->
</section>