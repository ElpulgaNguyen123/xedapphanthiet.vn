<div class="modal fade" id="edit-value-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form action="/admin/attribute/edit-attribute-value/<%= attributes.id %>" method="POST">
                    <div class="col-sm-12 mb-3">
                        <div class="row">
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-bold col-form-label" for="attribute_name_value_edit">
                                        Tên Thuộc tính
                                    </label>
                                    <input type="text" name="attribute_name_value_edit" id="attribute_name_value_edit"
                                        onkeyup="to_slug($(this).val(),'attribute_slug_value_edit')"
                                        class="form-control" placeholder="Tên thuộc tính" required>
                                </div>
                                <div class="form-group">
                                    <label class="font-weight-bold col-form-label" for="attribute_slug_value_edit">
                                        Slug
                                    </label>
                                    <input type="text" name="attribute_slug_value_edit" id="attribute_slug_value_edit"
                                        class="form-control" placeholder="Slug">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn hor-grd btn-grd-inverse" data-dismiss="modal">Hủy</button>
                <button id="edit-value-modal-submit" class="btn btn-grd-success">Lưu lại</button>
            </div>
        </div>
    </div>
    <script>
        $('#edit-value-modal-submit').on('click', function () {
            $("#edit-value-modal").submit();
        });
    </script>
</div>